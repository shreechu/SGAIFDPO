# Local development example environment file
# Copy to .env and fill with real values. Do NOT commit .env.

# Server
PORT=7071
NODE_ENV=development

# Secrets source
USE_KEY_VAULT=false
KEY_VAULT_NAME=

# Azure service principal (only if not using managed identity / Key Vault)
AZURE_CLIENT_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_SECRET=

# Azure services (optional for local development)
COSMOS_CONNECTION_STRING=
AZURE_STORAGE_CONNECTION_STRING=
BLOB_CONTAINER=

# Azure OpenAI (for answer evaluation)
# Fill in your Azure OpenAI resource endpoint and API key
AZURE_OPENAI_ENDPOINT=https://<your-resource-name>.cognitiveservices.azure.com/openai/deployments/gpt-4o-mini/chat/completions?api-version=2025-01-01-preview
AZURE_OPENAI_API_KEY=<your-api-key>

# Azure Speech Services (for speech-to-text and TTS)
SPEECH_REGION=eastus
SPEECH_KEY=<your-azure-speech-key>

# Session store (file|cosmos)
SESSION_STORE=file
SESSION_FILE_PATH=data/sessions.json

# Other optional flags
LOG_LEVEL=info

# Set to true to enable verbose debug output
DEBUG=false
